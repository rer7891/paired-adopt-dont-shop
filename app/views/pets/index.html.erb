<h1> Adopt Don't Shop: Pet List </h1>

<% @pets.each do |pet| %>
<div class='center-div'>
  <%= image_tag("#{pet.image_url}", {:style => "width:250px;"}) %>
  <h2> <%= link_to pet.name, "pets/#{pet.id}" %></h2>
  <p> Approximate Age: <%= pet.approximate_age %></p>
  <p> Gender: <%= pet.sex %></p>
  <p> Located at: <%= pet.shelter.name %></p>
  <p><%= link_to 'Edit Pet', "/pets/#{pet.id}/edit" %></p>
  <p><%= link_to 'Delete Pet', "/pets/#{pet.id}", method: :delete %></p>
</div>
<% end %>
