<%= form_tag "/applications" do %>
  <% @pets.each do |pet| %>
    <%= check_box_tag("#{pet.id}") %>
<p> <%= label_tag("#{pet.id}", "#{pet.name}") %> </p>
  <% end %>
  <%=label_tag 'Name' %>
<p><%=text_field_tag :name %> </p>
  <%=label_tag 'Address' %>
  <%=text_field_tag :address %> <br />
  <%=label_tag 'City' %>
  <%=text_field_tag :city %> </br>
  <%=label_tag 'State' %>
  <%=text_field_tag :state %> <br />
  <%=label_tag 'Zip' %>
  <%=text_field_tag :zip %> <br>
  <%=label_tag 'Phone Number' %>
  <%=text_field_tag :phone_number %> <br />
  <%=label_tag 'Description' %>
  <%=text_area_tag :description %> <br />
  <%= submit_tag 'Submit Application' %>
<%end%>
